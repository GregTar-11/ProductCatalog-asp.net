@model ProductCatalog.Models.Product

@{
    ViewData["Title"] = "Редактировать продукт";
}

<h2>Редактировать продукт</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
    <label asp-for="Category" class="control-label"></label>
    <input asp-for="Category" class="form-control" />
    <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
<a asp-action="ProduktIndex">Назад к списку</a>
@* This is the Edit view for modifying an existing product. It includes fields for the product name and price, and a submit button to save the changes. *@